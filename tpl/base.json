{
  "builders": [
    {
      "type": "vmware-iso",
      "guest_os_type": "{{ user `vmware_guest_os_type` }}",
      "http_directory": "http",
      "output_directory": "output-{{ user `vm_name` }}-vmware-iso",
      "tools_upload_flavor": "linux",
      "version": "{{ user `vmware_hardware_version` }}",
      "vmx_data": {
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      },
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_url` }}"
      ],
      "vm_name": "{{ user `vm_name` }}",
      "headless": "{{ user `headless` }}"
    },
    {
      "type": "vsphere-iso",
      "guest_os_type": "{{ user `vmware_guest_os_type` }}",
      "http_directory": "http",
      "vm_version": "{{ user `vmware_hardware_version` }}",

      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_paths": [
        "{{ user `iso_path` }}"
      ],

      "username": "{{ user `vsphere_username` }}",
      "password": "{{ user `vsphere_password` }}",
      "insecure_connection": "true",

      "vcenter_server": "{{ user `vsphere_host` }}",
      "datacenter": "{{user `vsphere_datacenter`}}",
      "cluster": "{{ user `vsphere_cluster` }}",
      "datastore": "{{user `vsphere_datastore`}}",
      "vm_name": "{{user `vm_name`}}-{{user `cm`}}{{user `cm_version`}}-{{user `version`}}",
      "folder": "{{ user `vsphere_template_folder` }}",

      "CPUs": "{{ user `cpus` }}",
      "RAM": "{{ user `memory` }}",

      "network_adapters": [
        {
          "network": "{{ user `vsphere_vlan` }}",
          "network_card": "vmxnet3"
        }
      ],

      "convert_to_template": true
    },
    {
      "type": "virtualbox-iso",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
      "hard_drive_interface": "sata",
      "output_directory": "output-{{ user `vm_name` }}-virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"],
        ["modifyvm", "{{.Name}}", "--vrdeproperty", "VNCPassword=password"]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "DESKTOP={{user `desktop`}}",
        "VMWARE_RESTART_AFTER_INSTALL={{user `vmware_restart_after_install`}}",
        "VMWARE_TOOLS_VERSION={{user `vmware_tools_version`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/locale.sh",
        "script/desktop.sh",
        "script/vagrant.sh",
        "script/sshd.sh",
        "script/vmware.sh",
        "script/virtualbox.sh",
        "script/cmtool.sh",
        "script/update.sh",
        "script/motd.sh",
        "script/systemd.sh",
        "script/minimize.sh",
        "script/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "boot_command_prefix": "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
    "cleanup_pause": "",
    "cm": "{{env `cm`}}",
    "cm_version": "{{env `cm_version`}}",
    "cpus": "2",
    "disk_size": "50000",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "headless": "{{env `headless`}}",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "iso_checksum_type": "sha1",
    "memory": "2048",
    "no_proxy": "{{env `no_proxy`}}",
    "preseed" : "preseed.cfg",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "hostname": "vagrant",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "version": "{{env `version`}}",
    "virtualbox_guest_os_type": "Ubuntu_64",
    "vmware_restart_after_install": "false",
    "vmware_tools_version": "latest",
    "vsphere_username": "{{env `vsphere_username`}}",
    "vsphere_password": "{{env `vsphere_password`}}",
    "vagrant_cloud_user": "nercceh",
    "vagrant_cloud_token": "{{env `VAGRANT_CLOUD_TOKEN`}}",
    "vagrant_distribution_server": "http://dist.nerc-lancaster.ac.uk",
    "aws_access_key": "{{env `access_key`}}",
    "aws_secret_key": "{{env `secret_key`}}"
  }
}
